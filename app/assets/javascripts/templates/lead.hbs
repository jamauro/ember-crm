{{outlet}}

{{#unless isEditing}}
  <article id="lead">
    <h1>{{model.fullName}}{{link-to 'edit' 'lead.edit' model classNames='edit'}}</h1>
    <p>Name: {{model.fullName}}</p>
    <p>Email: {{model.email}}</p>
    <p>Phone: {{model.phone}}</p>
    <p><label>Status: </label>{{view Ember.Select content=App.Lead.STATUSES value=model.status}}</p>
    <p><label>Notes:</label><br>{{view Ember.TextArea value=model.notes}}</p>
    <p>
      <a class="delete" href='#' {{action "delete"}}>delete</a>
      <input type='submit' value='Save Changes' {{action "saveChanges"}} />
      {{#if showUnsavedMessage}}
        <div class='unsaved'>unsaved changes</div>
      {{/if}}
      {{#if isSaving}}
        <div class='saving'>saving...</div>
      {{/if}}
    </p>
  </article>
{{/unless}}